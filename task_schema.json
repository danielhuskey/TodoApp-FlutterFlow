{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tasks",
  "type": "object",
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "completed": {
            "type": "boolean"
          },
          "created": {
            "type": "string",
            "format": "date-time"
          },
          "details": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "user": {
            "type": "string",
            "pattern": "^/users/[a-zA-Z0-9]+$"
          }
        },
        "required": ["completed", "created", "details", "title", "user"]
      }
    }
  },
  "required": ["tasks"]
}